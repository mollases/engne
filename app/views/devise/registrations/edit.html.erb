<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true, :class => "centerized"  }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field cf">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field cf">
    <%= f.label :password %> <%= f.password_field :password, :autocomplete => "off" %> <br/>
    <i>(leave blank if you don't want to change it)</i>
  </div>

  <div class="field cf">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,:autocomplete => "off" %>
  </div>

  <div class="field cf">
    <%= f.label :current_password %> <%= f.password_field :current_password,:autocomplete => "off" %><br />
    <i>(we need your current password to confirm your changes)</i>
  </div>
  <div class="field cf">
    <%= f.label :bio %>  
    <%= f.text_area :bio %>
  </div>
  <div class="field cf">
    <%= f.label :personal_site %>  
    <%= f.text_field :personal_site %>
  </div>
  <div class="field cf">
    <%= f.label :site2 %>  
    <%= f.text_field :site2 %>
  </div>
  <div class="field cf">
    <%= f.label :site3 %>  
    <%= f.text_field :site3 %>
  </div>

  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
